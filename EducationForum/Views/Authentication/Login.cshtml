@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>

    <title>Login</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="description" content="" />
    <meta name="keywords" content="">
    <meta name="" content="" />

    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/assets/css/animate.min.css">
    <!-- Favicon icon -->
    <link rel="icon" href="/assets/img/logo/logo-3.png" type="image/x-icon">

    <!-- vendor css -->
    <link rel="stylesheet" href="~/assets/css/style.css">


    <script src="~/js/jquery-3.7.1.min.js"></script>
    <script src="~/assets/services/callservicemethod.js"></script>
    <script src="~/assets/js/toastr.min.js"></script>

    <style>
        .img-fluid {
            max-width: 60%;
            height: auto;
            /* text-align: center; */
            position: relative;
            left: 22%;
            margin-top: 2vh;
            margin-bottom: -1rem !important;
        }

        .displayhide{
            display:none;
        }
    </style>
</head>
<body>
    <!-- [ auth-signin ] start -->
    <div class="auth-wrapper">
        <div class="auth-content text-center">
            <div class="card borderless">
                <img src="~/assets/img/logo/logo-3.png" alt="" class="img-fluid">
                <div class="row align-items-center ">
                    <div class="col-md-12">
                        <div class="card-body">
                            <h4 class="mb-3 f-w-400">Signin</h4>
                            <hr>
                            <form id="LoginForm">
                                <div class="form-group mb-3">
                                    <input type="text" class="form-control" id="Email" name="Email" placeholder="Email address">
                                </div>
                                <div class="form-group mb-4">
                                    <input type="password" class="form-control" id="Password" name="Password" placeholder="Password">
                                </div>
                                <div class="custom-control custom-checkbox text-left mb-4 mt-2 displayhide" >
                                    <input type="checkbox" class="custom-control-input" id="customCheck1">
                                    <label class="custom-control-label" for="customCheck1">Save credentials.</label>
                                </div>
                                <button class="btn btn-block btn-primary mb-4" id="Loginbtn">
                                    <div class="spinner-border spinner-border-sm" role="status" id="LoginSpinner">
                                        <span class="sr-only">Loading...</span>
                                    </div>
                                    Signin
                                </button>
                            </form>

                            <hr>
                            <p class="mb-2 text-muted displayhide">Forgot password? <a href="auth-reset-password.html" class="f-w-400">Reset</a></p>
                            @* <p class="mb-0 text-muted">Don’t have an account? <a href="auth-signup.html" class="f-w-400">Signup</a></p> *@
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- [ auth-signin ] end -->
    <!-- Required Js -->
    <script src="~/assets/js/vendor-all.min.js"></script>
    <script src="~/assets/js/plugins/bootstrap.min.js"></script>
    <script src="~/assets/js/pcoded.min.js"></script>
    <script src="~/assets/services/login_service.js"></script>
</body>

</html>

