<div class="container mt-5">
    <div class="modal fade" id="enquiryFormModal" tabindex="-1" aria-labelledby="enquiryFormModalLabel" aria-hidden="true" style="padding:0px;">
        <div class="modal-dialog modal-dialog-centered modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="enquiryFormModalLabel">Enquiry Form</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" onclick="Closepopup()"></button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <label for="name" class="form-label">Name</label>
                                <i class="fa-solid fa-user-tie Icon1"></i>
                                <input type="text" id="name" name="name" class="form-controls" disabled>
                            </div>
                            <div class="col-sm-3">
                                <label for="email" class="form-label">Email</label>
                                <i class="fa-regular fa-envelope Icon1"></i>
                                <input type="email" id="email" name="email" class="form-controls" disabled>
                            </div>
                            <div class="col-sm-3">
                                <label for="phone" class="form-label">Phone</label>
                                <i class="fa-solid fa-mobile-screen-button Icon1"></i>
                                <input type="text" id="phone" name="phone" class="form-controls" disabled>
                            </div>
                            <div class="col-sm-3">
                                <label for="classType" class="form-label">City</label>
                                <i class="fa-solid fa-user-group Icon1"></i>
                                <input type="text" id="City" name="City" class="form-controls" disabled>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <label for="instructiveLanguage" class="form-label">State</label>
                                <i class="fa-solid fa-language Icon1"></i>
                                <input type="text" id="State" name="State" class="form-controls" disabled>
                            </div>
                            <div class="col-sm-3">
                                <label for="classType" class="form-label">Subject</label>
                                <i class="fa-solid fa-user-group Icon1"></i>
                                <input type="text" id="Subject" name="Subject" class="form-controls" disabled>
                            </div>
                            <div class="col-sm-3">
                                <label for="instructiveLanguage" class="form-label">Grade</label>
                                <i class="fa-solid fa-language Icon1"></i>
                                <input type="text" id="Grade" name="Grade" class="form-controls" disabled>
                            </div>
                            <div class="col-sm-3">
                                <label for="classType" class="form-label">Class Type</label>
                                <i class="fa-solid fa-user-group Icon1"></i>
                                <input type="text" id="classType" name="classType" class="form-controls" disabled>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-4">
                                <label for="instructiveLanguage" class="form-label">Instructive Language</label>
                                <i class="fa-solid fa-language Icon1"></i>
                                <input type="text" id="instructiveLanguage" name="instructiveLanguage" class="form-controls" disabled>
                            </div>
                            <div class="col-sm-4">
                                <label for="classType" class="form-label">Topic</label>
                                <i class="fa-solid fa-user-group Icon1"></i>
                                <input type="text" id="Topic" name="Topic" class="form-controls" disabled>
                            </div>
                            <div class="col-sm-4">
                                <label for="enquirerNote" class="form-label">Board</label>
                                <i class="fa-regular fa-comment-dots Icon1"></i>
                                <input id="Board" name="Board" class="form-controls" disabled></input>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-12">
                                <label for="enquirerNote" class="form-label">Enquirer Note</label>
                                <i class="fa-regular fa-comment-dots Icon1"></i>
                                <textarea id="enquirerNote" name="enquirerNote" class="form-controls" rows="4" disabled></textarea>
                            </div>
                        </div>
                        @* <div class="row">

                        </div> *@
                        <div class="row mb-3">
                            <div class="col-sm-7">
                                <label for="responderNote" class="form-label">Responder Note</label>
                                <i class="fa-solid fa-pencil Icon1"></i>
                                <textarea id="responderNote" name="responderNote" class="form-controls" rows="4"></textarea>
                            </div>
                            <div class="col-sm-5" style="line-height: 4vh;margin-top: 3vh;">
                                <div class="row">
                                    <div class="col-sm-7">
                                        <div class="form-check form-switch">
                                            <input class="form-check-input" type="checkbox" id="IsResponded" name="darkmode" value="">
                                            <label class="form-check-label" for="mySwitch">Responded <span id="RespondeDate"></span></label>
                                        </div>
                                    </div>
                                    <div class="col-sm-5">
                                        <div class="form-check form-switch">
                                            <input class="form-check-input" type="checkbox" value="" id="IsOnHold">
                                            <label class="form-check-label" for="IsOnHold">
                                                OnHold
                                                @* <span id="IsOnHoldDate"></span> *@
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-7">
                                        <div class="form-check form-switch">
                                            <input class="form-check-input" type="checkbox" value="" id="IsRequestCallBack">
                                            <label class="form-check-label" for="IsRequestCallBack">
                                                Request call back @* <span id="RequestCallBackDate"></span> *@
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-sm-5">
                                        <div class="form-check form-switch">
                                            <input class="form-check-input" type="checkbox" value="" id="IsCallAttemptFailed">
                                            <label class="form-check-label" for="IsCallAttemptFailed">
                                                Call Attemp Failed
                                                @* <span id="IsCallAttemptFailedDate"></span> *@
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="row texthide" id="divRequestCallBackdate">
                                    <div class="col">
                                        <input type="datetime-local" class="form-controls" id="RequestCallBackDate" />
                                    </div>

                                </div>
                            </div>
                        </div>


                        <div class="text-center">
                            <button type="submit" class="btn btn-primary" id="EnquiryResponeSubmit">
                                <div class="spinner-border spinner-border-sm" role="status" id="EnquiryResponeSubmitSpinner">
                                    <span class="sr-only">Loading...</span>
                                </div>
                                Submit
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
